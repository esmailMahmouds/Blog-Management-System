@model User

<form method="post" asp-controller="Profile" asp-action="EditUserInfo"class="profile-form">
        <div class="form-group row pb-3">
            <div class="col-md-4">
                <div class="profile-image-container mb-3">
                    <img id="profile-image-preview" 
                         src="~/images/default.jpg" 
                         alt="Profile Image" 
                         class="profile-image" />
                </div>
                <input type="file" 
                       class="form-control" 
                       id="profile-image-input" 
                       name="ProfileImage" 
                       accept="image/*" 
                       disabled 
                       style="display: none;" />
                <button type="button" 
                        class="btn btn-outline-primary btn-sm" 
                        id="choose-image-button" 
                        disabled>
                    <img src="~/icons/camera.svg" alt="Camera icon" 
                        style="width: 16px; height: 16px; margin-right: 5px;">
                    Choose Image
                </button>
                <input type="hidden" asp-for="@Model.ImageURL" id="current-image-url" />
            </div>
        <div class="col-md-8">
            <div class="form-group row pb-3">
                <label class="col-sm-3 col-form-label" for="Name">Name</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" disabled asp-for="@Model.Name" />
                     <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row pb-3">
                <label class="col-sm-3 col-form-label" for="Email">Email</label>
                <div class="col-sm-9">
                    <input class="form-control" type="email" disabled asp-for="@Model.Email" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row pb-3">
                <label class="col-sm-3 col-form-label" for="DateOfBirth">Date of Birth</label>
                <div class="col-sm-9">
                    <input class="form-control" type="date" disabled value="" asp-for="@Model.DateOfBirth">
                </div>
            </div>

            <div class="form-group row pb-3">
                <label class="col-sm-3 col-form-label" for="Country">Country</label>
                <div class="col-sm-9">
                    <select class="form-control form-select" disabled asp-for="@Model.CountryId" 
                    asp-items="ViewBag.Countries"></select>
                </div>
            </div>

        </div>
        <div>
            <button class="btn btn-success w-25" id="update-button" hidden>
                Update
            </button>
            <button class="btn btn-primary w-25" id="edit-button" type="button">
                <img src="~/icons/pencil.svg" alt="Pencil icon" 
                style="width: 16px; height: 16px; margin-right: 5px;" >
                Edit
            </button>
        </div>
</form>
   
<style>
    .profile-form {
        max-width: 800px;
        width: 100%;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        margin-top: 20px;
    }

    .profile-image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 150px;
        height: 150px;
        border: 2px solid #dee2e6;
        border-radius: 50%;
        overflow: hidden;
        background-color: #f8f9fa;
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }

    #choose-image-button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>