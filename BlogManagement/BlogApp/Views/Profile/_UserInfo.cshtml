@model UserInfoDto
<link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />

<form method="post" asp-controller="Profile" asp-action="EditUserInfo" enctype="multipart/form-data" class="profile-form">
        <div class="form-group row pb-3">
            <div class="col-md-4">
                <div class="profile-image-container mb-3">
                    <img id="profile-image-preview" 
                         loading = "lazy"
                          src="@(Model.ProfileImageBase64 != null ?
                            $"data:image/jpeg;base64,{Model.ProfileImageBase64}" : "/images/default.jpg")"
                         alt="Profile Image" 
                         class="profile-image" />
                </div>
                <input type="file" 
                       class="form-control" 
                       id="profile-image-input" 
                       name="ProfileImage" 
                       accept="image/*" 
                       disabled 
                       style="display: none;" />
                <button type="button" 
                        class="btn btn-outline-primary btn-sm" 
                        id="choose-image-button" 
                        disabled>
                    <img src="~/icons/camera.svg" alt="Camera icon" 
                        style="width: 16px; height: 16px; margin-right: 5px;">
                    Choose Image
                </button>
               <input type="hidden" asp-for="@Model.ProfileImageBytes" id="current-image-data" />
            </div>
        <div class="col-md-8">
            <div class="form-group row pb-3">
                <label class="col-sm-3 col-form-label" for="Name">Name</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" disabled asp-for="@Model.Name" />
                     <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row pb-3">
                <label class="col-sm-3 col-form-label" for="Email">Email</label>
                <div class="col-sm-9">
                    <input class="form-control" type="email" disabled asp-for="@Model.Email" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row pb-3">
                <label class="col-sm-3 col-form-label" for="DateOfBirth">Date of Birth</label>
                <div class="col-sm-9">
                    <input class="form-control" type="date" disabled value="" asp-for="@Model.DateOfBirth">
                </div>
            </div>

            <div class="form-group row pb-3">
                <label class="col-sm-3 col-form-label" for="Country">Country</label>
                <div class="col-sm-9">
                    <select class="form-control form-select" disabled asp-for="@Model.CountryId" 
                    asp-items="ViewBag.Countries"></select>
                </div>
            </div>

        </div>
        <div>
            <button class="btn btn-success w-25" id="update-button" hidden>
                Update
            </button>
            <button class="btn btn-primary w-25" id="edit-button" type="button">
                <img src="~/icons/pencil.svg" alt="Pencil icon" 
                style="width: 16px; height: 16px; margin-right: 5px;" >
                Edit
            </button>
        </div>
</form>
   
