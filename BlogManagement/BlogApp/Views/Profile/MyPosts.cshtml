@model IEnumerable<Post>

@{
    ViewData["Title"] = "My Posts";
    var pendingPosts = Model.Where(p => p.Status == BlogApp.Enums.PostStatus.Pending);
    var approvedPosts = Model.Where(p => p.Status == BlogApp.Enums.PostStatus.Approved);
    var rejectedPosts = Model.Where(p => p.Status == BlogApp.Enums.PostStatus.Rejected);
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-newspaper"></i> My Posts</h2>
                <a asp-controller="Posts" asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New Post
                </a>
            </div>

            <!-- Back to Profile -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Profile" asp-action="Index">
                            <i class="fas fa-user"></i> Profile
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">My Posts</li>
                </ol>
            </nav>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>No Posts Yet</h4>
                    <p>You haven't created any posts yet. Start writing your first blog post!</p>
                    <a asp-controller="Posts" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Your First Post
                    </a>
                </div>
            }
            else
            {
                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@Model.Count()</h4>
                                        <small>Total Posts</small>
                                    </div>
                                    <i class="fas fa-newspaper fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@approvedPosts.Count()</h4>
                                        <small>Approved</small>
                                    </div>
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@pendingPosts.Count()</h4>
                                        <small>Pending</small>
                                    </div>
                                    <i class="fas fa-clock fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@rejectedPosts.Count()</h4>
                                        <small>Rejected</small>
                                    </div>
                                    <i class="fas fa-times-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filter Tabs -->
                <ul class="nav nav-tabs" id="postsTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">
                            <i class="fas fa-list"></i> All Posts (@Model.Count())
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab">
                            <i class="fas fa-check-circle text-success"></i> Approved (@approvedPosts.Count())
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">
                            <i class="fas fa-clock text-warning"></i> Pending (@pendingPosts.Count())
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">
                            <i class="fas fa-times-circle text-danger"></i> Rejected (@rejectedPosts.Count())
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content" id="postsTabContent">
                    <!-- All Posts -->
                    <div class="tab-pane fade show active" id="all" role="tabpanel">
                        <div class="row mt-3">
                            @foreach (var post in Model.OrderByDescending(p => p.CreateDate))
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    @await Html.PartialAsync("_PostCard", post)
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Approved Posts -->
                    <div class="tab-pane fade" id="approved" role="tabpanel">
                        <div class="row mt-3">
                            @foreach (var post in approvedPosts.OrderByDescending(p => p.CreateDate))
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    @await Html.PartialAsync("_PostCard", post)
                                </div>
                            }
                        </div>
                        @if (!approvedPosts.Any())
                        {
                            <div class="text-center mt-5">
                                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                                <h4>No Approved Posts</h4>
                                <p class="text-muted">Your posts will appear here once they are approved by administrators.</p>
                            </div>
                        }
                    </div>

                    <!-- Pending Posts -->
                    <div class="tab-pane fade" id="pending" role="tabpanel">
                        <div class="row mt-3">
                            @foreach (var post in pendingPosts.OrderByDescending(p => p.CreateDate))
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    @await Html.PartialAsync("_PostCard", post)
                                </div>
                            }
                        </div>
                        @if (!pendingPosts.Any())
                        {
                            <div class="text-center mt-5">
                                <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                                <h4>No Pending Posts</h4>
                                <p class="text-muted">Posts awaiting admin approval will appear here.</p>
                            </div>
                        }
                    </div>

                    <!-- Rejected Posts -->
                    <div class="tab-pane fade" id="rejected" role="tabpanel">
                        <div class="row mt-3">
                            @foreach (var post in rejectedPosts.OrderByDescending(p => p.CreateDate))
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    @await Html.PartialAsync("_PostCard", post)
                                </div>
                            }
                        </div>
                        @if (!rejectedPosts.Any())
                        {
                            <div class="text-center mt-5">
                                <i class="fas fa-times-circle fa-3x text-danger mb-3"></i>
                                <h4>No Rejected Posts</h4>
                                <p class="text-muted">Posts that were rejected by administrators will appear here.</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>