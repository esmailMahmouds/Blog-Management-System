@model IEnumerable<BlogApp.Models.DomainClasses.Post>

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">All Posts</h2>
        @if (Context.Request.Cookies.ContainsKey("Jwt") && !string.IsNullOrEmpty(Context.Request.Cookies["Jwt"]))
        {
            <a asp-controller="Posts" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Post
            </a>
        }
    </div>

    <div class="row g-4">
        @foreach (var post in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    @if (ViewBag.CurrentUserId != null && post.UserId == ViewBag.CurrentUserId)
                    {
                        <div class="card-header bg-transparent border-0 d-flex justify-content-end p-2">
                            <a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id" 
                               class="btn btn-outline-primary btn-sm" title="Edit Post">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    }
                    <a asp-controller="HomePage" asp-action="ViewPost" asp-route-id="@post.Id" style="text-decoration:none; color:inherit;">
                        <div class="card-body @(ViewBag.CurrentUserId != null && post.UserId == ViewBag.CurrentUserId ? "pt-0" : "")">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title text-dark">@post.Title</h5>
                                <span class="badge bg-light text-secondary border border-secondary">
                                    <i class="bi bi-tag-fill"></i> @post.Category.Name
                                </span>
                            </div>
                            <p class="text-muted mb-2"><small>by @post.User.Name</small></p>
                            <p class="card-text text-muted" style="display: -webkit-box; -webkit-line-clamp: 7; -webkit-box-orient: vertical; overflow: hidden;">
                                @post.Content
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                            <span class="text-secondary">
                                👍 @post.LikeCount Likes
                            </span>
                            <span class="text-warning">
                                ⭐ @post.AverageRate.ToString("0.0") (@post.RateCount votes)
                            </span>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

