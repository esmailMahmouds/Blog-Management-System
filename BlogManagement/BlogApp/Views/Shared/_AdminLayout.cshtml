@{
    Layout = "_Layout";
}

<div class="admin-header bg-gradient-primary text-white py-3 mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 mb-0">
                    <i class="fas fa-user-shield"></i> Admin Panel
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0">
                        <li class="breadcrumb-item">
                            <a asp-action="Dashboard" asp-controller="Admin" class="text-white-75">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        @if (ViewData["BreadcrumbTitle"] != null)
                        {
                            <li class="breadcrumb-item active text-white" aria-current="page">
                                @ViewData["BreadcrumbTitle"]
                            </li>
                        }
                    </ol>
                </nav>
            </div>
            <div class="col-auto">
                <div class="admin-actions">
                    <a asp-action="PendingPosts" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-clock"></i> Pending
                    </a>
                    <a asp-action="AllPosts" class="btn btn-primary btn-sm me-2">
                        <i class="fas fa-newspaper"></i> Posts
                    </a>
                    <a asp-action="ManageUsers" class="btn btn-info btn-sm">
                        <i class="fas fa-users"></i> Users
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@RenderBody()

<style>
.admin-header {
    background: linear-gradient(45deg, #4e73df, #224abe);
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
}

.text-white-75 {
    color: rgba(255, 255, 255, 0.75) !important;
}

.text-white-75:hover {
    color: rgba(255, 255, 255, 1) !important;
    text-decoration: none;
}

.breadcrumb-item + .breadcrumb-item::before {
    content: ">";
    color: rgba(255, 255, 255, 0.75);
}

.admin-actions .btn {
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.admin-actions .btn:hover {
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-1px);
}

.bg-gradient-primary {
    background: linear-gradient(180deg, #4e73df 0%, #224abe 100%);
}
</style>