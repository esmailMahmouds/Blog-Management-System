@{
    ViewData["Title"] = "Admin Dashboard";
    ViewData["BreadcrumbTitle"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Statistics Cards -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Posts
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.PendingPostsCount
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="PendingPosts" class="btn btn-warning btn-sm">
                            <i class="fas fa-eye"></i> Review Now
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Posts
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.TotalPostsCount
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-newspaper fa-2x text-primary"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="AllPosts" class="btn btn-primary btn-sm">
                            <i class="fas fa-list"></i> View All
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Approved Posts
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.ApprovedPostsCount
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="AllPosts" class="btn btn-success btn-sm">
                            <i class="fas fa-check"></i> View Approved
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Users
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.TotalUsersCount
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-info"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="ManageUsers" class="btn btn-info btn-sm">
                            <i class="fas fa-cogs"></i> Manage
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt"></i> Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">
                                <a asp-action="PendingPosts" class="btn btn-outline-warning btn-lg btn-block mb-2">
                                    <i class="fas fa-clock fa-2x mb-2"></i>
                                    <br>
                                    Review Pending Posts
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <a asp-action="AllPosts" class="btn btn-outline-primary btn-lg btn-block mb-2">
                                    <i class="fas fa-newspaper fa-2x mb-2"></i>
                                    <br>
                                    Manage All Posts
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <a asp-action="ManageUsers" class="btn btn-outline-info btn-lg btn-block mb-2">
                                    <i class="fas fa-users fa-2x mb-2"></i>
                                    <br>
                                    Manage Users
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Overview -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle"></i> System Overview
                    </h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.PendingPostsCount > 0)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Attention!</strong> 
                            You have @ViewBag.PendingPostsCount pending post(s) waiting for review.
                            <a asp-action="PendingPosts" class="alert-link">Review them now</a>.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle"></i>
                            <strong>Great!</strong> 
                            No pending posts at the moment. All posts are up to date.
                        </div>
                    }
                    
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i>
                        <strong>Welcome to the Admin Dashboard!</strong> 
                        Here you can manage all aspects of the blog system including posts, users, and content moderation.
                        Use the navigation above or the quick action buttons to get started.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>