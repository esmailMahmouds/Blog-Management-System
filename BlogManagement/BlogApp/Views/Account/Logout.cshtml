@{
    ViewData["Title"] = "Logout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">Logout Confirmation</h3>
            </div>
            <div class="card-body">
                <p class="mb-4">Are you sure you want to logout from your account?</p>
                
                <div class="d-flex justify-content-between">
                    <form asp-action="LogoutConfirmed" method="post" class="me-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Yes, Logout
                        </button>
                    </form>
                    
                    <a asp-controller="HomePage" asp-action="PostsDisplay" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>